---
import Layout from "../layouts/Layout.astro";
import ExperienceCard from "../components/ExperienceCard.astro";
import EducationCard from "../components/EducationCard.astro";
import { experiences } from "../data/experience";
import { Github, Linkedin, Mail, Twitter } from "lucide-astro";

const skillCategories = {
  Frontend: {
    color: "text-blue-400 border-blue-400/30",
    skills: [
      "Astro",
      "React.js",
      "Vite",
      "Next.js",
      "TypeScript",
      "JavaScript (ES6+)",
      "Tailwind CSS",
      "Redux/Zustand",
      "WebSockets",
      "GraphQL",
    ],
  },
  Backend: {
    color: "text-green-400 border-green-400/30",
    skills: [
      "Node.js",
      "Express.js",
      "NestJS",
      "REST APIs",
      "WebSocket Servers",
      "Microservices",
    ],
  },
  "Cloud & DevOps": {
    color: "text-purple-400 border-purple-400/30",
    skills: [
      "Cloudflare",
      "AWS (EC2, S3, Lambda)",
      "Docker",
      "CI/CD",
      "GitHub Actions",
    ],
  },
  Databases: {
    color: "text-yellow-400 border-yellow-400/30",
    skills: ["PostgreSQL", "MongoDB", "Redis"],
  },
  "AI & ML": {
    color: "text-pink-400 border-pink-400/30",
    skills: [
      "AI APIs",
      "LLM Integration",
      "Vector Databases",
      "AI Agents",
      "Eliza",
    ],
  },
  Blockchain: {
    color: "text-orange-400 border-orange-400/30",
    skills: ["Solana", "EVM"],
  },
  "Tools & Practices": {
    color: "text-cyan-400 border-cyan-400/30",
    skills: [
      "Git",
      "System Design",
      "API Design",
      "Agile/Scrum",
      "Technical Leadership",
    ],
  },
  "Performance & Security": {
    color: "text-red-400 border-red-400/30",
    skills: ["Web Security", "Performance Optimization", "OAuth/JWT"],
  },
  Business: {
    color: "text-indigo-400 border-indigo-400/30",
    skills: [
      "Project Management",
      "Technical Writing",
      "SEO",
      "Growth Strategy",
    ],
  },
};
---

<Layout title="Product Engineer - Portfolio">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <section
      class="flex flex-col items-start justify-between text-center mb-16"
    >
      <div class="flex flex-col items-start justify-start">
        <img
          src="/images/me.jpg"
          alt="Profile Picture"
          class="w-32 h-32 rounded-full mb-4 border-4 border-primary"
        />
        <div class="flex flex-col text-start">
          <h1 class="text-4xl font-space font-bold mb-4 text-gray-300">
            Product Engineer
          </h1>
          <div class="flex items-center space-x-4 mb-4">
            <h2 class="text-xl text-dark-200 font-space">Milos Arsic</h2>
            <a
              href="https://github.com/marsic3"
              class="text-gray-400 hover:text-gray-300"
              target="_blank"
            >
              <Github size={20} />
            </a>
            <a
              href="https://x.com/marsic33"
              class="text-gray-400 hover:text-gray-300"
              target="_blank"
            >
              <Twitter size={20} />
            </a>
            <a
              href="https://www.linkedin.com/in/milos-arsic-292b49142/"
              class="text-gray-400 hover:text-gray-300"
              target="_blank"
            >
              <Linkedin size={20} />
            </a>
          </div>
        </div>
        <div class="text-gray-500 w-full font-inter">
          <p class="text-left mb-4 leading-relaxed">
            I'm a Senior Software Engineer with more than 8 years of experience
            specializing in JavaScript and TypeScript development across client,
            server, and runtime environments. My expertise spans building
            sophisticated applications, extensions, bots, and AI agents, with
            recent focus on LLM integration, AI technology, and blockchain
            development.
          </p>
          <div class="collapse-content relative" id="expandable-content">
            <div class="content-wrapper">
              <p class="text-left mb-4 leading-relaxed">
                As a technical leader, I've played a pivotal role in
                transforming numerous SaaS products and blockchain platforms,
                combining deep technical expertise with strategic thinking to
                deliver exceptional business value. My experience includes
                developing scalable solutions that consistently prioritize user
                experience and measurable impact.
              </p>
              <p class="text-left mb-4 leading-relaxed">
                In the blockchain space, I've architected and integrated
                solutions across multiple ecosystems, including EVM-compatible
                chains and Solana. My work spans from implementing cross-chain
                bridges and smart contracts to building comprehensive DeFi
                platforms and DAO governance systems. I have extensive
                experience with Web3 technologies, token economics, and
                blockchain security best practices.
              </p>
              <p class="text-left mb-4 leading-relaxed">
                I take a hands-on, detail-oriented approach to software
                development, balancing technical excellence with practical
                business outcomes. I lead through example - coding alongside my
                team, sharing knowledge, and setting high standards through my
                own work. This approach naturally creates a collaborative
                environment where excellence and continuous improvement are part
                of our daily practice.
              </p>
              <p class="text-left mb-4 leading-relaxed">
                My technical portfolio demonstrates versatility across
                full-stack development, with particular strength in:
              </p>
              <ul class="list-disc list-inside text-left mb-4 leading-relaxed">
                <li>
                  Building and scaling complex TypeScript/JavaScript
                  applications
                </li>
                <li>Developing AI-powered solutions and LLM integrations</li>
                <li>Creating custom extensions, bots, and automation tools</li>
                <li>Architecting robust server-side applications</li>
                <li>Building decentralized applications on EVM and Solana</li>
                <li>
                  Implementing cross-chain solutions and smart contract systems
                </li>
                <li>Integrating Web3 protocols and wallet systems</li>
                <li>Developing secure token economics and DeFi mechanisms</li>
              </ul>
              <p class="text-left mb-4 leading-relaxed">
                Currently, I'm expanding my expertise in AI technologies and
                blockchain development, focusing on cross-chain
                interoperability, DeFi innovations, and scalable Web3
                architectures, while tackling challenges in product scaling and
                user engagement, always staying at the forefront of
                technological innovation.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <style>
      .collapse-content {
        overflow: hidden;
        transition: max-height 0.3s ease-out;
      }

      .blur-gradient {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 40px;
        background: linear-gradient(to bottom, transparent, rgb(17 17 17 / 1));
        pointer-events: none;
        opacity: 1;
        transition: opacity 0.3s ease-out;
      }

      .collapse-content.expanded .blur-gradient {
        opacity: 0;
      }
    </style>

    <section class="mb-16">
      <h2 class="text-2xl font-space font-bold mb-6 text-white">Education</h2>
      <EducationCard
        institution="Faculty of Organizational Sciences"
        degree="Bachelor's Degree"
        field="Computer Science"
        period="2013 - 2019"
      />
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-space font-bold mb-6 text-white">
        Skills & Technologies
      </h2>
      {
        Object.entries(skillCategories).map(([category, { color, skills }]) => (
          <div class="mb-6">
            <h3 class="text-lg font-space font-semibold mb-3 text-gray-300">
              {category}
            </h3>
            <div class="flex flex-wrap gap-3">
              {skills.map((skill) => (
                <span
                  class={`px-4 py-2 bg-dark-800 rounded-full border ${color}`}
                >
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-space font-bold mb-8 text-white">
        Professional Journey
      </h2>
      <div class="space-y-6">
        {
          experiences.map((experience) => (
            <ExperienceCard experience={experience} />
          ))
        }
      </div>
    </section>
  </div>
</Layout>
