---
interface Props {
  institution: string;
  degree: string;
  period: string;
  field: string;
}

const { institution, degree, period, field } = Astro.props;
---

<div class="pixel-box mb-8">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-lg font-pixel text-primary">{institution}</h3>
      <p class="text-sm text-secondary mt-2">{degree}</p>
      <p class="text-gray-300 text-sm mt-1">{field}</p>
    </div>
    <span class="text-xs text-gray-400 font-pixel">{period}</span>
  </div>
</div>