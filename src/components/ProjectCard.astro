---
import { ExternalLink, Tag } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
  link: string;
}

const { title, description, tags, link } = Astro.props;
---
<div class="bg-dark-800 rounded-lg p-6 border border-dark-700 hover:border-primary transition-all duration-300 hover-lift group">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-xl font-space font-bold text-white group-hover:text-primary transition-colors">{title}</h3>
    <a href={link} class="text-gray-400 hover:text-primary transition-all duration-300 transform hover:rotate-12">
      <ExternalLink size={20} />
    </a>
  </div>
  <p class="text-gray-300 mb-4 font-inter leading-relaxed">{description}</p>
  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <div class="skill-tag flex items-center space-x-1 px-3 py-1 bg-dark-700 rounded-full text-primary text-sm">
        <Tag size={14} class="transform transition-transform group-hover:rotate-12" />
        <span>{tag}</span>
      </div>
    ))}
  </div>
</div>