---
import { Github, Linkedin, Mail } from 'lucide-astro';
---
<header class="py-6 px-4 bg-dark-800 border-b border-dark-700">
  <nav class="max-w-4xl mx-auto flex justify-between items-center">
    <a href="/" class="text-xl font-space font-bold text-white hover:text-primary transition-all duration-300">
      Portfolio
    </a>
    <div class="flex items-center space-x-8">
      <div class="hidden md:flex space-x-6">
        <a href="/" class="nav-link text-gray-300 hover:text-primary transition-all duration-300 font-space">Home</a>
        <a href="/projects" class="nav-link text-gray-300 hover:text-primary transition-all duration-300 font-space">Projects</a>
        <a href="/blog" class="nav-link text-gray-300 hover:text-primary transition-all duration-300 font-space">Blog</a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="https://github.com/yourusername" class="text-gray-400 hover:text-primary transition-all duration-300 transform hover:scale-110">
          <Github size={20} />
        </a>
        <a href="https://linkedin.com/in/yourusername" class="text-gray-400 hover:text-primary transition-all duration-300 transform hover:scale-110">
          <Linkedin size={20} />
        </a>
        <a href="/contact" class="text-gray-400 hover:text-primary transition-all duration-300 transform hover:scale-110">
          <Mail size={20} />
        </a>
      </div>
    </div>
  </nav>
</header>